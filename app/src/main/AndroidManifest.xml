<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.appitiza.workmanager">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".app.Moderno"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.activities.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MainMaterialTheme.Base.splash"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activities.StartUpActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MainMaterialTheme.Base.login"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".ui.activities.RegisterActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MainMaterialTheme.Base.login"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".ui.activities.admin.AdminActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MainMaterialTheme.Base.admin"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".ui.activities.admin.AdminSitesActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MainMaterialTheme.Base.admin"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".ui.activities.admin.AdminWorkReportsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MainMaterialTheme.Base.admin"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".ui.activities.admin.AdminSiteReportsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MainMaterialTheme.Base.admin"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".ui.activities.admin.CreateSiteActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MainMaterialTheme.Base.admin"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".ui.activities.BaseActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".ui.activities.admin.AdminEditSiteActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MainMaterialTheme.Base.admin"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".ui.activities.admin.NotificationActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MainMaterialTheme.Base.admin"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".ui.activities.admin.SetSalaryActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MainMaterialTheme.Base.admin"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".ui.activities.admin.DeviceResetActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MainMaterialTheme.Base.admin"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".ui.activities.admin.SetTimeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MainMaterialTheme.Base.admin"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".ui.activities.admin.DeviceChangeRequestsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MainMaterialTheme.Base.admin"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".ui.activities.admin.EditWorkReportActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MainMaterialTheme.Base.admin"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".ui.activities.users.UsersActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MainMaterialTheme.Base.user"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".ui.activities.users.UserReportActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MainMaterialTheme.Base.user"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".ui.activities.users.UserNotificationsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MainMaterialTheme.Base.user"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".ui.activities.users.UserHistoryActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MainMaterialTheme.Base.user"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".ui.activities.users.DeviceChangeRequestActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MainMaterialTheme.Base.user"
            android:windowSoftInputMode="stateHidden" />


        <service android:name=".ui.activities.services.NotificationService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".ui.activities.services.FirebaseIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>


    </application>

</manifest>